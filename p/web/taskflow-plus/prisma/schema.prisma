generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
  tasks    Task[]
}

model Task {
  id     String @id @default(uuid())
  task   String
  userId String
  user   User   @relation(fields: [userId], references: [id])
}
